@using TravelAndTourismWebsite.Resources

@{
    ViewBag.Title = Resource.CreateOffer;
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="header-wrapper">
            <img src="~/Images/offerHeader.jpg" class="header-image" />
            <div class="header-contents">
                <h2>
                    <span class="glyphicon glyphicon-plus"></span>
                    @Resource.CreateOffer
                </h2>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <h3 class="@ViewBag.Alert text-center">
            @ViewBag.Message
        </h3>
    </div>
</div>

@using (Html.BeginForm("CreateOffer", "Offer", FormMethod.Get, new { @class = "form-horizontal" }))
{
    <div class="row">
        @Html.AntiForgeryToken()
        <div class="col-lg-6">
            <div class="panel panel-info">
                <div class="panel-heading text-center">
                    <h4 class="text-info">
                        <span class="glyphicon glyphicon-globe"></span>
                        @Resource.Source
                    </h4>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        @Html.Label("lblSourceCountry", Resource.Country, new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.DropDownList("SourceCountry", null, Resource.SelectCountry, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("lblSourceCity", Resource.City, new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.DropDownList("SourceCity", null, Resource.SelectCity, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="panel panel-success">
                <div class="panel-heading text-center">
                    <h4 class="text-info">
                        <span class="glyphicon glyphicon-globe"></span>
                        @Resource.Destination
                    </h4>
                </div>

                <div class="panel-body">

                    <div class="form-group">
                        @Html.Label("lblDestinationCountry", Resource.Country, new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.DropDownList("DestinationCountry", null, Resource.SelectCountry, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("lblDestinationCity", Resource.City, new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.DropDownList("DestinationCity", null, Resource.SelectCity, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <button type="submit" class="btn btn-primary btn-block">
                <span class="glyphicon glyphicon-share-alt"></span>
                @Resource.Continue...
            </button>
        </div>
    </div>
}