@model TravelAndTourismWebsite.Models.Message
@using TravelAndTourismWebsite.Resources
@{
    ViewBag.Title = Resource.Contactus;
}

<div class="row">
    <div class="col-lg-12">
        <div class="header-wrapper">
            <img src="~/Images/contactus-header.jpg" class="header-image" />
        </div>

    </div>
</div>
<br />

<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading text-center">
                <h4 class="text-info">
                    <span class="glyphicon glyphicon-envelope"></span>
                   @Resource.Email1
                </h4>
            </div>
            <div class="panel-body">
                <h4>
                    @Resource.SendUsEmail
                </h4>
                <p>
                    <a href="mailto:info@svutours.com" target="_top">
                        info@svutours.com
                    </a>
               
                </p>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading text-center">
                <h4 class="text-info">
                    <span class="glyphicon glyphicon-phone-alt"></span>
                    @Resource.Phone
                </h4>
            </div>
            <div class="panel-body">
                <h4>
                    @Resource.CallUs
                </h4>
                <p>
                    00963992111444
                </p>
            </div>
        </div>
    </div>
</div>

<hr />
<div class="row">
    <div class="col-lg-12">
        <h4>
            <span class="glyphicon glyphicon-envelope">
            </span>
            @Resource.OrSendMessage
        </h4>
        <br />
        @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = Resource.EmailPlaceHolder })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Subject, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", placeholder = Resource.MsgSubjectPH })
                    @Html.ValidationMessageFor(m => m.Subject)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Text, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.Text, new { @class = "form-control messageTextArea", placeholder = Resource.MsgTextPH })
                    @Html.ValidationMessageFor(m => m.Text)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-default">
                        @Resource.Send
                        <span class="glyphicon glyphicon-send"></span>
                    </button>
                </div>
            </div>
        }
    </div>
</div>
