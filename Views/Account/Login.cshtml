@model TravelAndTourismWebsite.Models.LoginViewModel
@using TravelAndTourismWebsite.Resources
@{
    ViewBag.Title = Resource.Login;
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="header-wrapper">
            <img src="~/Images/login.jpg" class="header-image" />
            <div class="header-contents">
                <h2>
                    <span class="glyphicon glyphicon-lock"></span>
                    @Resource.Login
                </h2>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-12">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4 class="alert alert-danger text-center">
                    <span class="glyphicon glyphicon-ban-circle"></span>
                    @Resource.UnauthorizedAccess
                </h4>
                <h3>
                    @Resource.Login
                </h3>
                <hr />
                @Html.ValidationSummary(true)
                <div class="form-group">
                    @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>
              
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="@Resource.Login" class="btn btn-default" />
                    </div>
                </div>
                <p>
                    @Resource.DontHaveAccount
                    @Html.ActionLink(Resource.Register, "Register") 
                </p>
            }
        </section>
    </div>
    <div class="col-md-4">
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}