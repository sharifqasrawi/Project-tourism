@model TravelAndTourismWebsite.Models.FlightReservation
@using TravelAndTourismWebsite.WebsiteLanguages
@using TravelAndTourismWebsite.Resources
@{
    ViewBag.Title = Resource.Ticket;
    
}

<div class="row" id="ticketHeader">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="header-wrapper">
            <img src="~/Images/plymouth-flights-header.jpg" class="header-image" />
            <div class="header-contents">
                <h2>
                    <span class="glyphicon glyphicon-print"></span>
                    @Resource.Ticket
                </h2>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <h2 class="text-center">
            @Resource.Ticket
        </h2>
    </div>
</div>

<div class="row" id="prntBtn">
    <div class="col-lg-12">
        <a href="#" class="btn btn-block btn-primary btn-lg" onclick="window.print();">
            <span class="glyphicon glyphicon-print">
            </span>
            @Resource.Print
        </a>
    </div>
</div>
<br />

<div class="row">
    <div class="col-lg-12">
        <div>
            <table class="table">
                <tr>
                    <th>
                        @Resource.ReservationNum
                    </th>
                    <td>
                        @Model.ID
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.Flight.Airline)
                    </th>
                    <td>
                        @Model.Flight.Airline
                    </td>
                </tr>
                <tr>
                    <th>
                        @Resource.FlightNumber
                    </th>
                    <td>
                        @Model.Flight.ID
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.Flight.SourceCity)
                    </th>
                    <td>
                        @switch(SiteLanguages.GetCurrentLanguageCulture())
                        {
                            case "en-US":
                                 @Model.Flight.SourceCity.Name_En
                                break;
                            case "ar-SA":
                             @Model.Flight.SourceCity.Name_Ar
                                break;
                            default:
                             @Model.Flight.SourceCity.Name_En
                                break;
                        }
                       
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.Flight.DestinationCity)
                    </th>
                    <td>
                        @switch (SiteLanguages.GetCurrentLanguageCulture())
                        {
                            case "en-US":
                                @Model.Flight.DestinationCity.Name_En
                                break;
                            case "ar-SA":
                            @Model.Flight.DestinationCity.Name_Ar
                                break;
                            default:
                            @Model.Flight.DestinationCity.Name_En
                                break;
                        }
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.Flight.Date)
                    </th>
                    <td>
                        @Model.Flight.DisplayDate
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.Flight.Time)
                    </th>
                    <td>
                        @Model.Flight.Time
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.Flight.FlightDuration)
                    </th>
                    <td>
                        @Model.Flight.FlightDuration
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.Customer)
                    </th>
                    <td>
                        @Model.Customer.FirstName @Model.Customer.LastName
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.Seats)
                    </th>
                    <td>
                        @Model.Seats
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.FlightClass)
                    </th>
                    <td>
                        @(Model.FlightClass == "FirstClass" ? Resource.FirstClass : Resource.EconomyClass)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Resource.ReservationDateTime
                    </th>
                    <td>
                        @Model.DisplayDateTime
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.ReservationPrice)
                    </th>
                    <td>
                        @Model.ReservationPrice $
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="text-center">
            <h3>
               --- @Resource.WeWishYouASafeFlight ---
            </h3>
        </div>
    </div>
</div>
