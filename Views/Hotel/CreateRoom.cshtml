@model TravelAndTourismWebsite.Models.Room
@using TravelAndTourismWebsite.Resources

@{
    ViewBag.Title = Resource.CreateRoom;
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="header-wrapper">
            <img src="~/Images/spsa-deluxe-header.jpg" class="header-image" />
            <div class="header-contents">
                <h2>
                    <span class="glyphicon glyphicon-plus"></span>
                    @Resource.CreateRoom
                </h2>
            </div>
        </div>
    </div>
</div>
<br />

<div class="row">
    <div class="col-lg-12">
        <h4>
            <span class="glyphicon glyphicon-list-alt"></span>
            @Resource.CreateRoomInfo
        </h4>
        <br />
        @using (Html.BeginForm("CreateRoom", "Hotel", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.Type, new { @class = "control-label col-md-2" })
                <div class="col-md-10">


                    @Html.DropDownList("Type", new List<SelectListItem>
                   {
                       new SelectListItem{
                            Text = Resource.Room,
                            Value = "Room"
                        },
                        new SelectListItem{
                            Text = Resource.Sweet,
                            Value = "Sweet"
                        }
                   }, new { @class = "form-control dropDownList" })
                    @Html.ValidationMessageFor(m => m.Type)
                </div>
            </div>
            
            <div class="form-group">
                @Html.LabelFor(m => m.Cust_Count, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Cust_Count, new { @class = "form-control", placeholder = Resource.Cust_CountPH })
                    @Html.ValidationMessageFor(m => m.Cust_Count)
                </div>
            </div>
            
            <div class="form-group">
                @Html.LabelFor(m => m.Details_En, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.Details_En, new { @class = "form-control ", placeholder = Resource.DetailsEnPH })
                    @Html.ValidationMessageFor(m => m.Details_En)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Details_Ar, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.Details_Ar, new { @class = "form-control ", placeholder = Resource.DetailsArPH })
                    @Html.ValidationMessageFor(m => m.Details_Ar)
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-md-10 col-md-offset-2">
                    <button type="submit" class="btn btn-success">
                        <span class="glyphicon glyphicon-floppy-save"></span>
                        @Resource.Create
                    </button>
                </div>
            </div>
        }
    </div>
</div>