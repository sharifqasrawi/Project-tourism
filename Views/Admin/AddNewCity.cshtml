@model TravelAndTourismWebsite.Models.City
@using TravelAndTourismWebsite.Resources
@{
    ViewBag.Title = Resource.AddNewCity;
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="header-wrapper">

            <img src="~/Images/w2.jpg" class="header-image" />
            <div class="header-contents">
                <h2>
                    <span class="glyphicon glyphicon-plus-sign"></span>
                    @Resource.AddNewCity
                </h2>
            </div>
        </div>
    </div>
</div>
<br />

<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("AddNewCity", "Admin", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <p>
                <span class="glyphicon glyphicon-info-sign"></span>
                @Resource.AddCityInfo
            </p>
            <br />

           @Html.Hidden("Country")

            <div class="form-group">
                @Html.LabelFor(m => m.Name_En, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Name_En, new { @class = "form-control", placeholder = Resource.CityNameEnPH })
                    @Html.ValidationMessageFor(m => m.Name_En)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Name_Ar, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Name_Ar, new { @class = "form-control", placeholder = Resource.CityNameArPH })
                    @Html.ValidationMessageFor(m => m.Name_Ar)
                </div>
            </div>
            
             <div class="form-group">
                @Html.LabelFor(m => m.Description_En, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.Description_En, new { @class = "form-control DescriptionTextArea", placeholder = Resource.AboutCityEnPH })
                    @Html.ValidationMessageFor(m => m.Description_En)
                </div>
            </div>
            
            <div class="form-group">
                @Html.LabelFor(m => m.Description_Ar, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.Description_Ar, new { @class = "form-control DescriptionTextArea", placeholder = Resource.AboutCityArPH })
                    @Html.ValidationMessageFor(m => m.Description_Ar)
                </div>
            </div>
            
             <div class="form-group">
                @Html.LabelFor(m => m.CityLocation, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.CityLocation, new { @class = "form-control", placeholder = Resource.CityLocationPH })
                    @Html.ValidationMessageFor(m => m.CityLocation)
                </div>
            </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Images, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" id="uploadFile" name="uploadFile" class="hidden" multiple="multiple" />
            <input type="button" id="btnUploadProductImage" value="@Resource.UploadFile" class="btn btn-default"
                   onclick="document.getElementById('uploadFile').click()" />
            <div>
                <div id="ImageHolder">
                </div>
            </div>
            @Html.ValidationMessageFor(m => m.Images)
        </div>
    </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-success">
                        <span class="glyphicon glyphicon-floppy-saved"></span>
                        @Resource.Add
                    </button>
                </div>
            </div>
        }
    </div>
</div>



