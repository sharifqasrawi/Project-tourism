@model TravelAndTourismWebsite.Models.EmailToAllUsers
@using TravelAndTourismWebsite.Resources
@{
    ViewBag.Title = Resource.SendEmailToAllUsers;
}


<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="header-wrapper">
            <img src="~/Images/msg2.jpg" class="header-image" />
            <div class="header-contents">
                <h2>
                    <span class="glyphicon glyphicon-envelope"></span>
                    @Resource.SendEmailToAllUsers
                </h2>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <h4>
            <span class="glyphicon glyphicon-info-sign">
            </span>
            @Resource.EmailToUsersInfo
        </h4>
        <hr />
        <h3 class="@ViewBag.Alert text-center">
            @ViewBag.Message
        </h3>
        @using (Html.BeginForm("SendEmailToUsers", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            
            <div class="form-group">
                @Html.LabelFor(m => m.Subject, new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", placeholder = Resource.EmailSubjectPlaceHolder })
                    @Html.ValidationMessageFor(m => m.Subject)
                 </div>
            </div>
            
             <div class="form-group">
                @Html.LabelFor(m => m.EmailText, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.EmailText, new { @class = "form-control messageTextArea", placeholder = Resource.EmailTextPlaceHolder })
                    @Html.ValidationMessageFor(m => m.EmailText)
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-md-10 col-md-offset-2">
                    <button type="submit" class="btn btn-primary btn-block">
                        @Resource.Send
                        <span class="glyphicon glyphicon-send"></span>
                    </button>
                </div>
            </div>
        }
    </div>
</div>
